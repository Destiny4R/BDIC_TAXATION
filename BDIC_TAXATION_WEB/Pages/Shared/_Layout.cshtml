                                </ul>
                            </li>
                        }
                        @if (User.IsInRole(BDIC_TAXATION_UTILITIES.SD.Role_Individual))
                        {
                            <li class="menu-title">Tax Payer Dashboard</li>

                            <li>
                                <a asp-page="/Tax-Payer/Index" class=" waves-effect text-decoration-none">
                                    <i class="mdi mdi-home"></i>
                                    <span>Home</span>
                                </a>
                            </li>
                            <li>
