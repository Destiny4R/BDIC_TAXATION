@page
@model BDIC_TAXATION_WEB.Pages.Admin.Report_Manager.Taxpayer_ReportsModel
@{
    ViewData["Title"] = "Taxpayer Reports";
    int sn = 0;
}
@section Sheets{
    <link href="~/lib/datatables.net-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/datatables.net-buttons-bs4/css/buttons.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/datatables.net-responsive-bs4/css/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/lib/flatpickr/flatpickr.min.css" rel="stylesheet" />
}
<div class="container">

    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-strat align-items-center flex-wrap gap-2">
                <div>
                    <h5 class="mb-0 fw-semibold">Taxpayer Reports</h5>
                    <small class="text-muted">Reports/Tax payer reports</small>
                </div>
            </div>
            <div class="row mt-3 mb-3">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control border-start-0" placeholder="Search taxpayers">
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0"><i class="bi bi-calendar"> From:</i></span>
                                <input type="text" class="form-control border-start-0 startdate" placeholder="@DateTime.UtcNow.ToShortDateString()">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0"><i class="bi bi-calendar"></i>&nbsp; To:</span>
                                <input type="text" class="form-control border-start-0 enddate" placeholder="@DateTime.UtcNow.ToShortDateString()" />
                            </div>
                        </div>
                        <div class="col-md-2">
                            <select class="custom-select">
                                <option value="Status" selected>Status</option>
                                <option value="Active">Active</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-green btn-outline-success">
                                Apply Filters
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="">
                <table class="table table-striped table-bordered" id="taxpayertable" width="100%">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Taxpayer Name</th>
                            <th>BTIN</th>
                            <th>Tax Type</th>
                            <th>Status</th>
                            <th>Registration Date</th>
                            <th>Last Filing Date</th>
                            <th>Location</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 1; i < 10; i++)
                        {
                            sn++;
                            <tr>
                                <td>@sn</td>
                                <td>Tersoo Terver</td>
                                <td>BTIN-02345082</td>
                                <td>Personal Income Tax</td>
                                <td><span class="text-success">Active</span></td>
                                <td>@(DateTime.UtcNow.ToShortDateString())</td>
                                <td>@(DateTime.UtcNow.AddYears(-365-sn).ToShortDateString())</td>
                                <td>Makurdi</td>
                            </tr>
                            sn++;
                            <tr>
                                <td>@sn</td>
                                <td>Barns Product Team</td>
                                <td>BTIN-12345092</td>
                                <td>Personal Income Tax</td>
                                <td><span class="text-success">Active</span></td>
                                <td>@(DateTime.UtcNow.ToShortDateString())</td>
                                <td>@(DateTime.UtcNow.AddYears(-365-sn).ToShortDateString())</td>
                                <td>Makurdi</td>
                            </tr>
                            sn++;
                            <tr>
                                <td>@sn</td>
                                <td>Barns Product Team</td>
                                <td>BTIN-12345092</td>
                                <td>Personal Income Tax</td>
                                <td><span class="text-danger">Inactive</span></td>
                                <td>@(DateTime.UtcNow.ToShortDateString())</td>
                                <td>@(DateTime.UtcNow.AddYears(-365-sn).ToShortDateString())</td>
                                <td>Makurdi</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/lib/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/lib/datatables.net-responsive-bs4/js/responsive.bootstrap4.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.all.js"></script>
    <script src="~/lib/jquery.blockui/jquery.blockui.min.js"></script>
    <script src="~/lib/flatpickr/flatpickr.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#taxpayertable').DataTable({
                "paging": true,
                "info": true,
                "serverSide": false,
                "lengthChange": false, // Hides the "Show X entries" dropdown
                "searching": false
            });
            flatpickr(".startdate", {
                dateFormat: "Y-m-d"
            });
            flatpickr(".enddate", {
                dateFormat: "Y-m-d"
            });
        });
    </script>
}