@page
@model BDIC_TAXATION_WEB.Pages.Tax_Payer.Request_ConsultantModel
@{
    ViewData["Title"] = "Request Consultant";
}
@section Sheets{
    <link href="~/lib/select2/css/select2.min.css" rel="stylesheet" />
}
<div class="container my-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h3 class="mb-1">Request Consultant</h3>
            <small class="text-muted">Manage your request for consultant</small>
        </div>
        <button type="button" class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#requestConsultantModal">Select a Consultant</button>
    </div>

    <!-- Filters -->
    <form class="row g-2 align-items-center mb-3">
        <!-- Search -->
        <div class="col-auto">
            <div class="input-group">
                <span class="input-group-text"><i class="bi bi-search"></i></span>
                <input type="text" class="form-control" placeholder="Search consultants">
            </div>
        </div>
        <!-- Tax ID -->
        <div class="col-auto">
            <input type="text" class="form-control" placeholder="Tax ID">
        </div>
        <!-- Email -->
        <div class="col-auto">
            <input type="email" class="form-control" placeholder="Email">
        </div>
        <!-- Phone -->
        <div class="col-auto">
            <input type="tel" class="form-control" placeholder="Phone">
        </div>
        <!-- Status -->
        <div class="col-auto">
            <select class="form-select">
                <option selected>Status</option>
                <option>Approved</option>
                <option>Pending</option>
                <option>Rejected</option>
            </select>
        </div>
        <!-- Apply -->
        <div class="col-auto">
            <button type="submit" class="btn btn-success">
                Apply filters
            </button>
        </div>
    </form>

    <!-- Table -->
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th scope="col">S/N</th>
                    <th scope="col">Consultant ID</th>
                    <th scope="col">Reg. NO.</th>
                    <th scope="col">Name</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Email</th>
                    <th scope="col">Status</th>
                    <th scope="col">Employee Type</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <!-- Example row: Approved -->
                <tr>
                    <td>1</td>
                    <td>67</td>
                    <td>C-1144876</td>
                    <td>Boom Consultant</td>
                    <td>08169192646</td>
                    <td>boomconsult@gmail.com</td>
                    <td><span class="badge bg-success">Approved</span></td>
                    <td>Locals</td>
                    <td><button class="btn btn-outline-primary btn-sm">View</button></td>
                </tr>
                <!-- Example row: Pending -->
                <tr>
                    <td>2</td>
                    <td>68</td>
                    <td>C-1144877</td>
                    <td>Sky Analyst</td>
                    <td>08169192647</td>
                    <td>skyanalyst@gmail.com</td>
                    <td><span class="badge bg-warning text-dark">Pending</span></td>
                    <td>Freelancers</td>
                    <td><button class="btn btn-outline-primary btn-sm">View</button></td>
                </tr>
                <!-- Example row: Rejected with Unassign -->
                <tr>
                    <td>4</td>
                    <td>70</td>
                    <td>C-1144879</td>
                    <td>Design Specialist</td>
                    <td>08169192649</td>
                    <td>designspecialist@gmail.com</td>
                    <td><span class="badge bg-danger">Rejected</span></td>
                    <td>Startups</td>
                    <td><button class="btn btn-danger btn-sm">Unassign</button></td>
                </tr>
                <!-- Add more rows as needed -->
            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="requestConsultantModal" tabindex="-1" aria-labelledby="requestConsultantModalLabel" aria-hidden="true">
    <div class="modal-dialog ">
        <div class="modal-content">
            <div class="modal-body">
                <div class="d-flex justify-content-end mb-2">
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-title h3" id="requestConsultantModalLabel"><strong>Consultant Request</strong></div>
                <small>Select consultants</small>
                <form method="post">
                    <div class="mt-3 mb-3">
                        <label class="form-label">Select Consultant</label>
                        <select class="custom-select constant_select" asp-for="GetConsultant" asp-items="Model.Consultant" style="width:100%;">
                            <option></option>
                        </select>
                        <span class="text-danger mt-3" asp-validation-for="GetConsultant"></span>
                    </div>
                    <div class="mt-5">
                        <button class="btn btn-success w-100" type="submit">Send Request</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/select2/js/select2.full.min.js"></script>

    <script>
        $(document).ready(function () {
            $(".constant_select").select2({
                theme: "classic",
                placeholder: "Select a Consultant",
                allowClear: true
            });
        });
    </script>
}