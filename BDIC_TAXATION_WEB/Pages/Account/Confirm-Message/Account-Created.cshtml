@page
@model BDIC_TAXATION_WEB.Pages.Account.Confirm_Message.Account_CreatedModel
@{
    Layout = null;
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Account Created || BDIC</title>

    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body>
    <div class="container-fluid py-4 px-3 px-sm-5">
        <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6">
                <!-- Your card with responsive wrapper -->
                <div class="card mb-3 responsive-card">
                    <div class="card-body">
                        <div class="d-flex justify-content-center mt-5">
                            <img class="img-fluid" src="~/images/Message.svg" alt="Message icon">
                        </div>
                        <div class="text-center h4 mb-3 fw-bold">Account Created!</div>
                        <p class="h5 text-center text-color">
                            Your account has been created successfully. Please check your email for verification link.
                        </p>
                        <hr>
                        <div>
                            <p class="mb-3 text-center">
                                Haven't received the confirmation message?
                            </p>
                        </div>
                        <div class="d-flex justify-content-center">
                            <a asp-page="#" class="btn btn-success btn-lg">Resend message</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
</body>
</html>