@page
@model BDIC_TAXATION_WEB.Pages.Account.Register.Business_AccountModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Create Account</title>

    <link href="~/images/logos/favicon.ico" rel="icon" />
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet" />
    <style>

        .icon-input-container {
            position: relative;
        }

            .icon-input-container i {
                position: absolute;
                top: 50%;
                left: 10px;
                transform: translateY(-50%);
                color: #6c757d; /* Bootstrap text-muted color */
            }

            .icon-input-container .form-control {
                padding-left: 35px; /* Adjust padding to accommodate the icon */
            }
    
    </style>
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,400,500,600" rel="stylesheet">

</head>
<body>
    <div class="row d-flex justify-content-center">
        <div class="col-lg-6 col-sm-10 col-md-10 mt-5">
            <div class="card">
                <div class="card-header">
                    <div class="text-center4">
                        <img src="~/images/logos/loginlogo.png" alt="logo" width="100%" />
                    </div>
                    <div class="h3">
                        <strong>Create a Business Profile Account</strong>
                    </div>
                </div>
                <div class="card-body">
                    <form>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="mb-3">
                                    <label for="businessName" class="form-label">Business Name</label>
                                    <div class="icon-input-container">
                                        <i class="bi bi-person-fill"></i>
                                        <input type="text" class="form-control" id="businessName" value="Mimiventures" required>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="mb-3">
                                    <label for="registrationNumber" class="form-label">Registration Number</label>
                                    <div class="icon-input-container">
                                        <i class="bi bi-card-text-fill"></i>
                                        <input type="text" class="form-control" id="registrationNumber" value="125467890" required>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="mb-3">
                                    <label for="surname" class="form-label">Surname</label>
                                    <div class="icon-input-container">
                                        <i class="bi bi-person-fill"></i>
                                        <input type="text" class="form-control" id="surname" value="Tersoo" required>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="mb-3">
                                    <label for="firstName" class="form-label">First Name</label>
                                    <div class="icon-input-container">
                                        <i class="bi bi-person-fill"></i>
                                        <input type="text" class="form-control" id="firstName" value="Solomon" required>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="mb-3">
                                    <label for="middleName" class="form-label">Middle Name</label>
                                    <div class="icon-input-container">
                                        <i class="bi bi-person-fill"></i>
                                        <input type="text" class="form-control" id="middleName" value="Aondona">
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email Address</label>
                                    <div class="icon-input-container">
                                        <i class="bi bi-envelope"></i>
                                        <input type="email" class="form-control" id="email" value="aondona@example.com">
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="mb-3">
                                    <label for="phone" class="form-label">Phone Number</label>
                                    <div class="icon-input-container">
                                        <i class="bi bi-telephone-fill"></i>
                                        <input type="text" class="form-control" id="phone" value="235655889">
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="mb-3">
                                    <label for="password" class="form-label">Password</label>
                                    <div class="icon-input-container">
                                        <i class="bi bi-lock-fill"></i>
                                        <input type="text" class="form-control" id="password" value="********">
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-center">
                                <button type="submit" class="btn btn-success w-50">Create</button>
                            </div>
                        </div>
                    </form>
                    <p class="mt-3 text-center">Already have an account? <a href="#">Log In</a></p>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript" src="/lib/bootstrap/js/bootstrap.bundle.js"></script>
    @*<script src="~/js/site.js" asp-append-version="true"></script>*@
    <script src="~/js/newbusiness.js"></script>
</body>
</html>