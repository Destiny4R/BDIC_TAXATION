@page
@model BDIC_TAXATION_WEB.Pages.Account.LoginModel
@{
    ViewData["Title"] = "";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>BDIC Login</title>
    <link href="/lib/bootstrap/css/bootstrap.css" rel="stylesheet">
    <link href="/lib/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            margin: 0;
            background: url('/images/loginbg.png') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Segoe UI', sans-serif;
        }

        .bg-overlay {
            background-color: rgba(255, 255, 255, 0.85);
            backdrop-filter: blur(6px);
            border-radius: 15px;
        }

        .form-section {
            padding: 2rem;
        }

        .btn-green {
            background-color: #004d26;
            color: white;
        }

            .btn-green:hover {
                background-color: #003d1f;
            }
        .card {
            border-radius: 1rem;
        }

        .login-option {
            cursor: pointer;
            transition: all 0.2s ease-in-out;
        }

            .login-option.active {
                border: 1px solid #28a745;
                background-color: #e6f9ec;
            }

        .radio-check {
            width: 18px;
            height: 18px;
            border-radius: 50%;
            border: 2px solid #ccc;
            display: inline-block;
            margin-left: auto;
        }

        .login-option.active .radio-check {
            background-color: #28a745;
            border-color: #28a745;
        }
    </style>
</head>
<body>

    <div class="container min-vh-100 d-flex align-items-center justify-content-center">
        <div class="row w-100 m-3 m-md-5 bg-overlay shadow-lg">

            <!-- Login Type -->
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 ">
                <div class="card shadow mt-3 p-4">
                    <h5 class="fw-bold mb-1">Select login type</h5>
                    <p class="text-muted mb-4">Select your login type below</p>

                    <div class="row g-3">

                        <!-- Tax Payer -->
                        <div class="col-12">
                            <div class="border rounded p-3 d-flex align-items-center login-option active" for="loginradio1">
                                <i class="bi bi-person-circle me-3 text-success fs-4"></i>
                                <div>
                                    <strong>Tax payer</strong><br>
                                    <small class="text-muted">Login as an individual or corporate tax payer</small>
                                </div>
                                <input type="radio" name="loginradio" id="radiobtn1" class="radio-check ms-auto" />
                            </div>
                        </div>

                        <!-- Corporate Admin -->
                        <div class="col-12">
                            <div class="border rounded p-3 d-flex align-items-center login-option" for="loginradio2">
                                <i class="bi bi-building me-3 text-primary fs-4"></i>
                                <div>
                                    <strong>Corporate Admin</strong><br>
                                    <small class="text-muted">Manage your company profile</small>
                                </div>
                                <input type="radio" name="loginradio" id="radiobtn2" class="radio-check ms-auto" />
                            </div>
                        </div>

                        <!-- Consultant -->
                        <div class="col-12">
                            <div class="border rounded p-3 d-flex align-items-center login-option" for="loginradio3">
                                <i class="bi bi-person-workspace me-3 text-warning fs-4"></i>
                                <div>
                                    <strong>Consultant</strong><br>
                                    <small class="text-muted">Login as a consultant</small>
                                </div>
                                <input type="radio" name="loginradio" id="radiobtn3" class="radio-check ms-auto" />
                            </div>
                        </div>

                        <!-- BDIC Admin -->
                        <div class="col-12">
                            <div class="border rounded p-3 d-flex align-items-center login-option" for="loginradio4">
                                <i class="bi bi-shield-lock me-3 text-danger fs-4"></i>
                                <div>
                                    <strong>BDIC Admin</strong><br>
                                    <small class="text-muted">Login as an administrator</small>
                                </div>
                                <input type="radio" name="loginradio" id="radiobtn4" class="radio-check ms-auto" />
                            </div>
                        </div>

                    </div> <!-- /.row -->
                </div> <!-- /.card -->
            </div>

            <!-- Login Form -->
            <div class="col-12 col-md-6 form-section">
                <div class="card">
                    <div class="card-body">
                        <img src="/images/logos/loginlogo.png" alt="BDiC Logo" class="mb-2" style="max-width: 100%;">
                        <h5 class="fw-bold">Login</h5>
                        <p class="text-muted">Welcome back. Login to access your dashboard</p>

                        <form method="post">
                            <div class="form-floating mb-3 position-relative">
                                <input class="form-control ps-5 pe-5" asp-for="Inputs.Username" placeholder="Username" />
                                <i class="bi bi-person-circle position-absolute top-50 start-0 translate-middle-y ms-3 mt-2"></i>
                                <label asp-for="Inputs.Username" class="ps-5 pe-5 text-dark">Email</label>
                            </div>
                            <div><span asp-validation-for="Inputs.Username"></span></div>

                            <div class="form-floating mb-3 position-relative">
                                <input asp-for="Inputs.Password" class="form-control ps-5 pe-5" placeholder="Password" />
                                <i class="bi bi-lock-fill position-absolute top-50 start-0 ms-3 mb-2"></i>
                                <i class="bi bi-eye-fill position-absolute top-50 end-0  me-3"
                                   style="cursor: pointer;"
                                   onclick="togglePassword()"></i>
                                <label asp-for="Inputs.Password" class="ps-5 pe-5">Password</label>
                            </div>
                            <div class="form-check mt-2 mb-2">
                                <input class="form-check-input" type="checkbox" asp-for="Inputs.Rememberme">
                                <label class="form-check-label" asp-for="Inputs.Rememberme">
                                    Remember me
                                </label>
                            </div>
                            <div><span asp-validation-for="Inputs.Password"></span></div>
                            <div class="mb-3">
                                <div class="row mb-3">
                                    <div class="col-sm-6 text-start">
                                        <a href="#" class="small">Forgot Tax ID</a>
                                    </div>
                                    <div class="col-sm-6 text-end">
                                        <a asp-page="/Account/Reset-Password" class="small">Forgot Password?</a>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-green w-100 mb-2">Login</button>
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>
                            <a asp-page="/Account/Register/Individual-Account" class="btn btn-outline-secondary w-100 mb-2">Create Individual Account</a>
                            <div class="text-center text-muted">OR</div>
                            <a asp-page="/Account/Register/Business-Account" class="btn btn-outline-success w-100 mt-2">Create a Corporate account</a>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript" src="~/lib/bootstrap/js/bootstrap.min.js"></script>
    <script>
        const options = document.querySelectorAll('.login-option');
        options.forEach(option => {
            option.addEventListener('click', () => {
                options.forEach(opt => opt.classList.remove('active'));
                option.classList.add('active');
            });
        });
        function togglePassword() {
            const passwordField = document.getElementById('floatingPassword');
            const icon = document.querySelector('.bi-eye-fill');

            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                icon.classList.remove('bi-eye-fill');
                icon.classList.add('bi-eye-slash-fill');
            } else {
                passwordField.type = 'password';
                icon.classList.remove('bi-eye-slash-fill');
                icon.classList.add('bi-eye-fill');
            }
        }
    </script>
</body>
</html>


