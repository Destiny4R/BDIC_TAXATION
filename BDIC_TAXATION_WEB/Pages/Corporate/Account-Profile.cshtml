@page
@model BDIC_TAXATION_WEB.Pages.Corporate.Account_ProfileModel
@{
    ViewData["Title"] = "Account Profile";
}

@section Sheets{
    <link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/lib/flatpickr/flatpickr.min.css" rel="stylesheet" />
    <style>
        .icon-input-container {
            position: relative;
        }

            .icon-input-container i {
                position: absolute;
                top: 50%;
                right: 10px;
                transform: translateY(-50%);
                color: #6c757d; /* Bootstrap text-muted color */
            }

            .icon-input-container .form-control {
                padding-right: 35px; /* Adjust padding to accommodate the icon */
            }
    </style>
}
<div class="container ">
    <h4>Settings</h4>
    <p class="text-muted">Manage your account settings</p>

    <ul class="nav nav-tabs mb-4" id="settingsTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile"
                    type="button" role="tab">
                Profile
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="business-tab" data-bs-toggle="tab" data-bs-target="#business"
                    type="button" role="tab">
                Contact Information
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="password-tab" data-bs-toggle="tab" data-bs-target="#password"
                    type="button" role="tab">
                Change Password
            </button>
        </li>
    </ul>

    <div class="tab-content">
        <!-- Profile Tab -->
        <div class="tab-pane fade show active" id="profile" role="tabpanel">
            <div class="row col-md-6">
                <div class="card p-4">
                    <h5>Update profile information</h5>
                    <p class="text-muted">Profile information</p>

                    @*<div class="mb-3 text-center">
                        <div class="rounded-circle bg-success text-white d-inline-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                            TS
                        </div>
                        <div>
                            <button class="btn btn-outline-secondary btn-sm mt-2">Update Image</button>
                            <p class="text-muted small">Recommended 400 x 400 in jpg or PNG format</p>
                        </div>
                    </div>*@
                    <form>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label for="yearOfEstablishment" class="form-label">Year of establishment</label>
                                    <div class="icon-input-container">
                                        <input type="text" class="form-control establish" id="establish" placeholder="DD/MM/YY">
                                        <i class="bi bi-calendar-event-fill"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="mb-3">
                                    <label for="dateOfCommencement" class="form-label">Date of Business Commencement</label>
                                    <div class="icon-input-container">
                                        <input type="text" class="form-control commencement" id="commencement" placeholder="DD/MM/YY">
                                        <i class="bi bi-calendar-event-fill"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="mb-3">
                                    <label for="businessType" class="form-label">Business Type</label>
                                    <input type="text" class="form-control" id="businessType" value="Tailoring">
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="mb-3">
                                    <label for="businessCategory" class="form-label">Business Category</label>
                                    <select class="form-select" id="businessCategory">
                                        <option selected>Select category</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="mb-3">
                                    <label for="businessSubCategory" class="form-label">Business Sub Category</label>
                                    <select class="form-select" id="businessSubCategory">
                                        <option selected>Select sub category</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="mb-3">
                                    <label for="staffSize" class="form-label">Staff Size</label>
                                    <input type="text" class="form-control" id="staffSize" value="10 - 50">
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div class="mb-3">
                                    <label for="settlementType" class="form-label">Settlement Type</label>
                                    <select class="form-select" id="settlementType">
                                        <option selected>Select settlement type</option>
                                    </select>
                                </div>
                            </div>

                            <div class="col-sm-12">
                                <button class="btn btn-success w-100" type="button" id="successBtn">Update</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Contact  information Tab -->
        <div class="tab-pane fade" id="business" role="tabpanel">
            <div class="row col-md-6">
                <div class="card p-4">
                    <h5>Update profile information</h5>
                    <p class="text-muted">Contact information</p>

                    <form>
                        <div class="mb-3">
                            <label class="form-label">State of Residence</label>
                            <select class="form-select">
                                <option>Benue</option>
                                <option>Abuja</option>
                                <option>Kanu</option>
                                <option>Lagos</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Local Government</label>
                            <select class="form-select">
                                <option>Makurdi</option>
                                <option>Otukpo</option>
                                <option>Kwande</option>
                                <option>Vandeikya</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">City/Town</label>
                            <input type="text" class="form-control" value="Makurdi">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Street</label>
                            <input type="text" class="form-control" value="Lagos Avenue">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">House Number</label>
                            <input type="text" class="form-control" value="123456">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Landmark</label>
                            <input type="text" class="form-control" value="45 Maple Street, Makurdi, Benue State, Nigeria">
                        </div>
                        <button class="btn btn-success w-100">Update</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Change Password Tab -->
        <div class="tab-pane fade" id="password" role="tabpanel">
            <div class="row col-md-6">
                <div class="card p-4">
                    <h5>Account Settings</h5>
                    <p class="text-muted">Change password</p>

                    <form>
                        <div class="mb-3">
                            <label class="form-label">Current Password</label>
                            <div class="input-group">
                                <input type="password" class="form-control" value="*************">
                                <span class="input-group-text"><i class="bi bi-eye"></i></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">New Password</label>
                            <div class="input-group">
                                <input type="password" class="form-control" value="*************">
                                <span class="input-group-text"><i class="bi bi-eye"></i></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Confirm Password</label>
                            <div class="input-group">
                                <input type="password" class="form-control" value="*************">
                                <span class="input-group-text"><i class="bi bi-eye"></i></span>
                            </div>
                        </div>
                        <button class="btn btn-success w-100">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/sweetalert2/sweetalert2.all.js"></script>
    <script src="~/lib/jquery.blockui/jquery.blockui.min.js"></script>
    <script src="~/lib/flatpickr/flatpickr.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#successBtn").click(function () {
                Swal.fire({
                    title: "Success!",
                    text: "Your action was completed successfully.",
                    icon: "success",
                    confirmButtonText: "OK"
                });
            });

            // Initialize Flatpickr for date input 
            flatpickr("#commencement", {
                dateFormat: "Y-m-d",
                allowInput: true,
                defaultDate: new Date()
            });
            flatpickr("#establish", {
                dateFormat: "Y-m-d",
                allowInput: true,
                defaultDate: new Date()
            });
        });
    </script>
}
