@page
@model BDIC_TAXATION_WEB.Pages.Corporate.IndexModel
@{
    ViewData["Title"] = "Corporate Dashboard";
}
@section Sheets{
    <link href="~/lib/datatables.net-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/datatables.net-buttons-bs4/css/buttons.bootstrap4.min.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/datatables.net-responsive-bs4/css/responsive.bootstrap4.min.css" rel="stylesheet" type="text/css" />
}
<div class="container">
    <div class="content-header-left col-md-12 mb-2">
        <div class="row breadcrumbs-top">
            <div class="col-sm-8">
                <div>
                    <div class="h3">
                        <strong class="text-muted">Hello,</strong>&ensp;<strong>Tersoo Solomon</strong>
                    </div>
                    <p>Welcome to your dashboard</p>
                </div>
            </div>
            <!--TEMPORAR URL-->
            <div class="col-sm-2">
                <a asp-page="/Index-Payer" class="btn btn-info"><i class="bi bi-bank"></i>Dashboard</a>
            </div>
            <div class="col-sm-2 justify-content-start d-flex justify-content-md-end">
                <div class="">
                    <a class="btn btn-success btn-green" href="#"><i class="fa fa-plus">&ensp; File Tax Return</i></a>
                </div>
            </div>
        </div>
    </div>
    <div class="alert alert-warning fade show" role="alert">
        <div class="d-flex justify-content-end">
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <div class="d-flex justify-content-between mt-1">
            <div>
                <strong>Complete Company Profile Information</strong><br />
                <small>You need to complete your profile to have access to more features...</small>
            </div>
            <div>
                <a class="btn btn-warning" asp-page="/Corporate/Account-Profile">Update profile</a>
            </div>
        </div>
    </div>
    <div class="mt-4">
        <div class="row g-4">
            <!-- Payment Corporate Dashboard Overview -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <strong>Payment overview</strong>
                        <p class="card-subtitle">Manage and track your payments</p>
                        <div class="d-flex justify-content-center mt-5 mb-5">
                            <img class="text-light" src="~/images/Union.png" height="150px" alt="Deadline Icon">
                        </div>
                        <h6 class="fw-bold mt-2 text-center">No payments</h6>
                        <p class="text-muted text-center">Your payment overview will appear here.</p>
                    </div>
                </div>
            </div>

            <!-- Upcoming Deadline -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <strong>Upcoming Deadline</strong>
                        <p class="card-subtitle">Manage and track your next Important Deadline</p>
                        <div class="d-flex justify-content-center mt-5 mb-5">
                            <img class="text-light" src="~/images/Union.png" height="150px" alt="Deadline Icon">
                        </div>
                        <h6 class="fw-bold mt-2 text-center">Deadlines</h6>
                        <p class="text-muted text-center">Your upcoming deadlines will appear here.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row g-4">
        <!-- Payment Overview -->
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-wrap justify-content-between align-items-start gap-2 mb-2">
                        <div class="d-flex flex-column flex-sm-row align-items-start align-items-sm-center">
                            <strong class="me-2 mb-2 mb-sm-0">Recent activities:</strong>
                            <select class="form-select form-select-sm w-auto">
                                <option selected>All</option>
                            </select>
                        </div>
                        <div>
                            <a href="#" class="btn btn-link text-success p-0">View all</a>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center mt-5 mb-2">
                        <img class="text-light" src="~/images/Union.png" height="150px" alt="Deadline Icon">
                    </div>
                    <div class="d-flex justify-content-center">
                        <div>
                            <strong class="fw-bold mt-2">Activities</strong>
                            <p class="text-muted">Your activities will appear here.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script>
            $(document).ready(function () {
                var groupingTable = $('#').DataTable({
                    "columnDefs": [{
                        "visible": false,
                        "targets": 2
                    }],
                    "order": [
                        [2, 'asc']
                    ],
                    "displayLength": 10
                });

            });

    </script>
}

